---
import logo from '../assets/enact.svg';
// import { Row, Cell } from '@enact/ui/Layout';
---

<header class='header'>
  <div class='divLogo'>
    <a href='/'>
      <img class='img' src={logo} />
      <span class='title'>Enact</span>
    </a>
  </div>
  <div class='divNav'>
    <!-- <Row /> -->
    <nav class='nav' style='align-items: flex-end;'>
      <ul>
        <a
          aria-current='page'
          class='navigationLinks'
          href='/'
          style='--cell-size: 100%;'>Home</a
        >
        <a class='navigationLinks' href='/docs/' style='--cell-size: 100%;'
          >Getting Started</a
        ><a
          class='navigationLinks'
          href='/docs/modules/'
          style='--cell-size: 100%;'>API</a
        ><a
          href='https://github.com/enactjs/enact'
          class='navigationLinks'
          style='--cell-size: 100%;'>Github</a
        ><a
          href='https://enactjs.com/sampler'
          class='navigationLinks'
          style='--cell-size: 100%;'>UI Components</a
        >
      </ul>
    </nav>
  </div>
</header>

<style>
  .navigationLinks {
    margin-left: 3em;
    line-height: 2em;
    text-transform: uppercase;
    font-weight: 500;
    flex: 0 0 auto;
    color: #5582ff;
  }

  .header {
    flex: 0 0 auto;
    --cell-size: 100%;
    background-color: white;
    color: #667;
    font-size: 11px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 24px;
    padding-right: 24px;
    max-width: 960px;
  }
  .nav {
    align-items: flex-end;
    text-align: center;
    justify-content: flex-end;
    margin: -30px 0 5px 400px;
  }

  .title {
    font-size: 30px;
    line-height: 76px;
    position: relative;
    display: inline-block;
    padding-left: 120px;
    transform: translateX(0);
    will-change: transform;
    color: #5582ff;
  }

  .divLogo {
    flex: 0 0 auto;
    --cell-size: 100%;
  }

  .divNav {
    --cell-size: none;
  }

  .img {
    display: inline-block;
    background-color: #5582ff;
    height: 100px;
    width: 100px;
    position: absolute;
    top: 0;
    z-index: 1;
    transform: scale(1);
    transform-origin: top left;
    will-change: transform;
  }
</style>
